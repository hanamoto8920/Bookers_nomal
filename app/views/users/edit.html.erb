

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <!--エラー文章部分-->
      <p><a href="#" class="text-danger">
        <% if @user.errors.any? %>
          <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </a></p>

      <!--ユーザー情報編集ページ-->
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
        <h2>名前</h2>
        <%= f.text_field :name %>
        <h2>画像</h2>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        <h2>自己紹介文</h2>
        <%= f.text_area :introduction, placeholder: "ここに紹介文を書く" %>
        <%= f.submit "更新する" %>
      <% end %>
    </div>
  </div>
</div>



